{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "build",
    "declaration": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
